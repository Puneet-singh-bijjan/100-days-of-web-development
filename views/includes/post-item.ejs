<article class="post-item">
  <h2><%= post.title %> </h2>
  <p class="post-item-author"><%= post.name %></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
    <a class="btn btn-alt" href="/remove/<%= post.Id %>">Delete Post</button>
    <a href="/edit-post/<%= post.Id %> ">Edit Post</a>
    <a class="btn" href="/post-detail/<%= post.Id %> ">View Post</a>
  </div>
</article>